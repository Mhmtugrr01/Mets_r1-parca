    <script>
        // Sayfa değiştirme
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.querySelectorAll('.navbar-item').forEach(item => {
                item.classList.remove('active');
            });
            
            document.getElementById(pageId + '-page').classList.add('active');
            
            // Navbar'da ilgili öğeyi aktif et
            const navItem = document.querySelector(`.navbar-item[onclick="showPage('${pageId}')"]`);
            if (navItem) {
                navItem.classList.add('active');
            }
        }
        
        // Tab değiştirme
        function showTab(tabId) {
            const tabContainer = document.getElementById(tabId).parentElement;
            
            // Aynı container içindeki tüm tab-content'leri gizle
            tabContainer.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Aynı container içindeki tüm tab'ları pasif yap
            tabContainer.previousElementSibling.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // İlgili tab-content'i göster
            document.getElementById(tabId).classList.add('active');
            
            // İlgili tab'ı aktif et
            const activeTab = tabContainer.previousElementSibling.querySelector(`.tab[onclick="showTab('${tabId}')"]`);
            if (activeTab) {
                activeTab.classList.add('active');
            }
        }
        
        // Modal gösterme/gizleme
        function showOrderDetail(orderId) {
            document.getElementById('order-detail-modal').style.display = 'block';
            // API'den sipariş detaylarını alıp göster
            console.log(`Sipariş detayı gösteriliyor: ${orderId}`);
        }
        
        function showPurchaseDetail(orderId) {
            document.getElementById('purchase-detail-modal').style.display = 'block';
            // API'den satın alma detaylarını alıp göster
            console.log(`Satın alma detayı gösteriliyor: ${orderId}`);
        }
        
        function showProductionPlan(orderId) {
            document.getElementById('production-plan-modal').style.display = 'block';
            // API'den üretim planı detaylarını alıp göster
            console.log(`Üretim planı gösteriliyor: ${orderId}`);
        }
        
        function showCreateOrderModal() {
            document.getElementById('create-order-modal').style.display = 'block';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }
        
        // Tablo filtreleme
        function filterOrders() {
            // Arama ve filtre değerlerini al
            const searchText = document.querySelector('.search-input').value.toLowerCase();
            const statusFilter = document.querySelectorAll('.filter-item select')[0].value;
            const customerFilter = document.querySelectorAll('.filter-item select')[1].value;
            
            // Tüm satırları kontrol et
            const rows = document.querySelectorAll('#orders-table tbody tr');
            rows.forEach(row => {
                let showRow = true;
                
                // Metin araması
                if (searchText) {
                    let found = false;
                    row.querySelectorAll('td').forEach(cell => {
                        if (cell.textContent.toLowerCase().includes(searchText)) {
                            found = true;
                        }
                    });
                    if (!found) showRow = false;
                }
                
                // Status filtresi
                if (statusFilter && showRow) {
                    const status = row.querySelector('td:nth-child(7)').textContent.toLowerCase();
                    if (!status.includes(statusFilter.toLowerCase())) {
                        showRow = false;
                    }
                }
                
                // Müşteri filtresi
                if (customerFilter && showRow) {
                    const customer = row.querySelector('td:nth-child(2)').textContent;
                    if (customer !== customerFilter) {
                        showRow = false;
                    }
                }
                
                // Satırı göster/gizle
                row.style.display = showRow ? '' : 'none';
            });
        }
        
        // Veri yenileme
        function refreshData() {
            // API'den yeni verileri al ve tabloya ekle
            console.log('Veriler yenileniyor...');
            // Normalde burada bir API isteği yapılır, sonra veriler güncellenir
            
            // Örnek animasyon
            const btn = document.querySelector('button i.fa-sync-alt');
            btn.classList.add('fa-spin');
            setTimeout(() => {
                btn.classList.remove('fa-spin');
            }, 1000);
        }
        
        // Sayfa açıldığında çalışacak kod
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Uygulama başlatıldı');
            
            // Modal dışına tıklamada kapatma
            window.addEventListener('click', function(event) {
                const modals = document.querySelectorAll('.modal');
                modals.forEach(modal => {
                    if (event.target === modal) {
                        modal.style.display = 'none';
                    }
                });
            });
            
            // Escape tuşuna basıldığında açık modalı kapatma
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    const openModal = document.querySelector('.modal[style*="display: block"]');
                    if (openModal) {
                        openModal.style.display = 'none';
                    }
                }
            });
        });
    </script>
</body>
