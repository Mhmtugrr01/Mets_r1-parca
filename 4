    <script>
        // Giriş işlemleri
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if(!username || !password) {
                alert('Kullanıcı adı ve şifre giriniz');
                return;
            }
            
            // Gerçek uygulamada Firebase Authentication kullanılacak
            // Şimdilik basit bir kontrol
            if(username === 'demo' && password === 'demo123') {
                document.getElementById('login-page').style.display = 'none';
                document.getElementById('main-app').style.display = 'block';
            } else {
                alert('Hatalı kullanıcı adı veya şifre!');
            }
        }
        
        function register() {
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const username = document.getElementById('register-username').value;
            const department = document.getElementById('register-department').value;
            const password = document.getElementById('register-password').value;
            const confirmPassword = document.getElementById('register-password-confirm').value;
            
            // Validasyon kontrolleri
            if(!name || !email || !username || !department || !password || !confirmPassword) {
                alert('Tüm alanları doldurunuz');
                return;
            }
            
            if(password !== confirmPassword) {
                alert('Şifreler eşleşmiyor');
                return;
            }
            
            // Gerçek uygulamada Firebase Authentication kullanılacak
            alert('Kayıt başarılı! Giriş yapabilirsiniz.');
            showLogin();
        }
        
        function resetPassword() {
            const email = document.getElementById('forgot-email').value;
            
            if(!email) {
                alert('E-posta adresinizi giriniz');
                return;
            }
            
            // Gerçek uygulamada Firebase Authentication kullanılacak
            alert(`${email} adresine şifre sıfırlama bağlantısı gönderildi.`);
            showLogin();
        }
        
        function logout() {
            // Gerçek uygulamada Firebase Authentication kullanılacak
            document.getElementById('main-app').style.display = 'none';
            document.getElementById('login-page').style.display = 'flex';
        }
        
        function showLogin() {
            document.getElementById('login-page').style.display = 'flex';
            document.getElementById('register-page').style.display = 'none';
            document.getElementById('forgot-password-page').style.display = 'none';
        }
        
        function showRegister() {
            document.getElementById('login-page').style.display = 'none';
            document.getElementById('register-page').style.display = 'flex';
            document.getElementById('forgot-password-page').style.display = 'none';
        }
        
        function showForgotPassword() {
            document.getElementById('login-page').style.display = 'none';
            document.getElementById('register-page').style.display = 'none';
            document.getElementById('forgot-password-page').style.display = 'flex';
        }
        
        // Kullanıcı menüsü açma/kapama
        function toggleUserMenu() {
            const dropdown = document.getElementById('user-dropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        
        // Sayfa değiştirme
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.querySelectorAll('.navbar-item').forEach(item => {
                item.classList.remove('active');
            });
            
            document.getElementById(pageId + '-page').classList.add('active');
            
            // Navbar'da ilgili öğeyi aktif et
            const navItem = document.querySelector(`.navbar-item[onclick="showPage('${pageId}')"]`);
            if (navItem) {
                navItem.classList.add('active');
            }
        }
        
        // Tab değiştirme
        function showTab(tabId) {
            const tabContainer = document.getElementById(tabId).parentElement;
            
            // Aynı container içindeki tüm tab-content'leri gizle
            tabContainer.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Aynı container içindeki tüm tab'ları pasif yap
            tabContainer.previousElementSibling.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // İlgili tab-content'i göster
            document.getElementById(tabId).classList.add('active');
            
            // İlgili tab'ı aktif et
            const activeTab = tabContainer.previousElementSibling.querySelector(`.tab[onclick="showTab('${tabId}')"]`);
            if (activeTab) {
                activeTab.classList.add('active');
            }
        }
        
